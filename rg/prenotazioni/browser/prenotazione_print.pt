<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
xmlns:tal="http://xml.zope.org/namespaces/tal"
xmlns:metal="http://xml.zope.org/namespaces/metal"
xmlns:i18n="http://xml.zope.org/namespaces/i18n"
lang="en"
metal:use-macro="context/main_template/macros/master"
i18n:domain="rg.prenotazioni">

    <head>
        <metal:block fill-slot="top_slot"
        tal:define="dummy python:request.set('disable_border',1);
        disable_column_one python:request.set('disable_plone.leftcolumn',1);
        disable_column_two python:request.set('disable_plone.rightcolumn',1);" />
    </head>
    <body>

        <metal:main fill-slot="main">
            <tal:main-macro metal:define-macro="main"
            tal:define="member context/@@plone_portal_state/member;
            prenotazione nocall:view/prenotazione;
            putils context/plone_utils;">

                <div tal:replace="structure provider:plone.abovecontenttitle" />
                <h3>
                    Benvenuto:
                    <span metal:use-macro="python:prenotazione.widget('title', mode='view')" />
                </h3>
                <h1>Prenotazione avvenuta con successo</h1>
                <div>
                    <p>
                        La richiesta Ã¨ stata correttamente inserita.
                        <br />
                        Di seguito sono elencati i dati ad essa relativi:
                    </p>
                </div>
                <div class="documentDescription-box clear-block">
                    <strong i18n:translate="">Description</strong>
                    <p class="documentDescription">
                        <tal:block condition="prenotazione/Description">
                            <metal:field use-macro="python:prenotazione.widget('description', mode='view')">Description</metal:field>
                        </tal:block>
                    </p>
                </div>
                <div tal:replace="structure provider:plone.abovecontentbody" />
                <div class="field" tal:condition="prenotazione/getTipologia_prenotazione">
                    <strong i18n:translate="">Reservation type:</strong>
                    <span tal:replace="prenotazione/getTipologia_prenotazione" />
                </div>
                <div class="field" tal:condition="prenotazione/getData_prenotazione">
                    <strong i18n:translate="">Reservation date:</strong>
                    <span tal:replace="python:putils.toLocalizedTime(prenotazione.getData_prenotazione(), True)" />
                </div>
                <div class="field" tal:condition="prenotazione/getAzienda">
                    <strong i18n:translate="">Company:</strong>
                    <span tal:replace="prenotazione/getAzienda" />
                </div>
                <div class="field" tal:condition="prenotazione/getTelefono">
                    <strong i18n:translate="">Phone number:</strong>
                    <span tal:replace="prenotazione/getTelefono" />
                </div>
                <div class="field" tal:condition="prenotazione/getEmail">
                    <strong i18n:translate="">E-mail:</strong>
                    <a tal:attributes="href string:mailto:${prenotazione/getEmail}"
                    tal:content="prenotazione/getEmail" />
                </div>
                <div tal:replace="structure provider:plone.belowcontentbody" />
                <ul>
                    <li id="document-action-print">
                        <a href="javascript:this.print();" title="">
                            <span i18n:translate="">Print</span>
                        </a>
                    </li>
                    <li>
                        <a title="Prenotazioni" href="prenotazioni"
                        tal:attributes="href string:${prenotazione/aq_parent/absolute_url}?data=${request/data|nothing}">Ritorna alle prenotazioni</a>
                    </li>
                </ul>

            </tal:main-macro>
        </metal:main>

    </body>
</html>
